{
  "name": "@commercetools-test-data/monorepo",
  "version": "1.0.0",
  "description": "Modules to generate test data for commercetools APIs",
  "private": true,
  "preconstruct": {
    "packages": [
      "generators",
      "standalone"
    ]
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "./scripts/postinstall.sh",
    "build": "preconstruct build",
    "watch": "preconstruct watch",
    "clean": "manypkg exec rm -rf build dist",
    "lint": "jest --config jest.eslint.config.js",
    "format": "pnpm format:js && pnpm format:md",
    "format:js": "prettier --write '**/*.{js,ts,tsx}'",
    "format:md": "prettier --write --parser markdown '**/*.md'",
    "test": "jest --config jest.test.config.js",
    "test:watch": "pnpm run test --watch",
    "typecheck": "tsc --noEmit",
    "changeset:version-and-format": "changeset version && prettier --write --parser json '**/package.json' && pnpm install --lockfile-only",
    "generate-types:settings": "graphql-codegen -r dotenv/config --config codegen.settings.yml",
    "generate-types:mc": "graphql-codegen -r dotenv/config --config codegen.mc.yml",
    "generate-types:core": "graphql-codegen -r dotenv/config --config codegen.core.yml",
    "generate-types:ctp": "graphql-codegen -r dotenv/config --config codegen.ctp.yml",
    "generate-types": "pnpm generate-types:settings && pnpm generate-types:mc && pnpm generate-types:core && pnpm generate-types:ctp",
    "generate-model": "pnpm --filter @commercetools-test-data/generators generate"
  },
  "dependencies": {
    "@babel/core": "^7.21.0",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.2",
    "@commercetools-frontend/babel-preset-mc-app": "22.42.1",
    "@commercetools-frontend/eslint-config-mc-app": "22.42.1",
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@graphql-codegen/add": "5.0.3",
    "@graphql-codegen/cli": "5.0.5",
    "@graphql-codegen/introspection": "4.0.3",
    "@graphql-codegen/typescript": "4.1.6",
    "@graphql-codegen/typescript-graphql-files-modules": "3.0.0",
    "@graphql-codegen/typescript-operations": "4.6.0",
    "@graphql-codegen/typescript-resolvers": "4.5.0",
    "@manypkg/cli": "0.24.0",
    "@manypkg/find-root": "3.0.0",
    "@preconstruct/cli": "2.8.12",
    "@types/jest": "^29.4.0",
    "@types/node": "20.17.32",
    "babel-jest": "29.7.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "cross-env": "7.0.3",
    "dotenv": "16.5.0",
    "eslint": "8.57.1",
    "eslint-formatter-pretty": "5.0.0",
    "find-up": "^7.0.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jest-extended": "4.0.2",
    "jest-fail-on-console": "3.3.1",
    "jest-runner-eslint": "2.2.1",
    "jest-silent-reporter": "0.6.0",
    "jest-watch-typeahead": "2.2.2",
    "lint-staged": "15.5.1",
    "prettier": "3.5.3",
    "prettier-jest": "npm:prettier@^2",
    "tsc-files": "^1.1.3",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.15.9"
}
