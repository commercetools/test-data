{
  "name": "@commercetools-test-data/monorepo",
  "version": "1.0.0",
  "description": "Modules to generate test data for commercetools APIs",
  "license": "MIT",
  "private": true,
  "workspaces": ["core", "models/*", "utils"],
  "preconstruct": {
    "packages": ["core", "models/*", "utils"]
  },
  "scripts": {
    "prepare": "husky install",
    "postinstall": "preconstruct dev && manypkg check",
    "build": "preconstruct build",
    "watch": "preconstruct watch",
    "clean": "manypkg exec rm -rf build dist",
    "lint": "jest --projects jest.eslint.config.js",
    "lint:js": "jest --config jest.eslint.config.js",
    "format": "yarn format:js && yarn format:md",
    "format:js": "prettier --write '**/*.{js,ts,tsx}'",
    "format:md": "prettier --write --parser markdown '**/*.md'",
    "test": "jest --config jest.test.config.js",
    "typecheck": "tsc --noEmit",
    "changeset:version-and-format": "changeset version && prettier --write --parser json '**/package.json'"
  },
  "dependencies": {
    "@changesets/changelog-github": "0.4.1",
    "@changesets/cli": "2.17.0",
    "@commercetools-frontend/babel-preset-mc-app": "20.10.1",
    "@commercetools-frontend/eslint-config-mc-app": "20.10.1",
    "@commitlint/cli": "13.2.1",
    "@commitlint/config-conventional": "13.2.0",
    "@manypkg/cli": "0.18.0",
    "@preconstruct/cli": "2.1.5",
    "@types/jest": "^26.0.20",
    "@types/node": "14.17.21",
    "babel-jest": "27.2.5",
    "cross-env": "7.0.3",
    "eslint": "7.32.0",
    "eslint-formatter-pretty": "4.1.0",
    "husky": "7.0.2",
    "jest": "27.2.5",
    "jest-runner-eslint": "0.11.1",
    "jest-silent-reporter": "0.5.0",
    "jest-watch-typeahead": "0.6.5",
    "lint-staged": "11.2.1",
    "prettier": "2.4.1",
    "read-pkg-up": "7.0.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.5",
    "typescript": "4.4.3"
  }
}
