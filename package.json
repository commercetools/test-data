{
  "name": "@commercetools-test-data/monorepo",
  "version": "1.0.0",
  "description": "Modules to generate test data for commercetools APIs",
  "license": "MIT",
  "private": true,
  "workspaces": ["core", "models/*", "utils"],
  "preconstruct": {
    "packages": ["core", "models/*", "utils"]
  },
  "scripts": {
    "prepare": "husky install",
    "postinstall": "preconstruct dev && manypkg check",
    "build": "preconstruct build",
    "watch": "preconstruct watch",
    "clean": "manypkg exec rm -rf build dist",
    "lint": "jest --projects jest.eslint.config.js",
    "lint:js": "jest --config jest.eslint.config.js",
    "format": "yarn format:js && yarn format:md",
    "format:js": "prettier --write '**/*.{js,ts,tsx}'",
    "format:md": "prettier --write --parser markdown '**/*.md'",
    "test": "jest --config jest.test.config.js",
    "typecheck": "tsc --noEmit",
    "changeset:version-and-format": "changeset version && prettier --write --parser json '**/package.json'"
  },
  "dependencies": {
    "@changesets/changelog-github": "0.4.0",
    "@changesets/cli": "2.16.0",
    "@commercetools-frontend/babel-preset-mc-app": "18.7.0",
    "@commercetools-frontend/eslint-config-mc-app": "18.7.0",
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-conventional": "12.1.1",
    "@manypkg/cli": "0.17.0",
    "@preconstruct/cli": "2.0.7",
    "@types/jest": "^26.0.20",
    "@types/node": "14.14.43",
    "babel-jest": "26.6.3",
    "cross-env": "7.0.3",
    "eslint": "7.25.0",
    "eslint-formatter-pretty": "4.0.0",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "jest-runner-eslint": "0.10.0",
    "jest-silent-reporter": "0.5.0",
    "jest-watch-typeahead": "0.6.3",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "read-pkg-up": "7.0.1",
    "rimraf": "3.0.2",
    "ts-jest": "26.5.5",
    "typescript": "4.2.4"
  }
}
