{
  "name": "@commercetools-test-data/monorepo",
  "version": "1.0.0",
  "description": "Modules to generate test data for commercetools APIs",
  "private": true,
  "preconstruct": {
    "packages": ["core", "graphql-types", "models/*", "utils"]
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "./scripts/postinstall.sh",
    "build": "preconstruct build",
    "watch": "preconstruct watch",
    "clean": "manypkg exec rm -rf build dist",
    "lint": "jest --config jest.eslint.config.js",
    "format": "pnpm format:js && pnpm format:md",
    "format:js": "prettier --write '**/*.{js,ts,tsx}'",
    "format:md": "prettier --write --parser markdown '**/*.md'",
    "test": "jest --config jest.test.config.js",
    "typecheck": "tsc --noEmit",
    "changeset:version-and-format": "changeset version && prettier --write --parser json '**/package.json' && pnpm install --lockfile-only",
    "generate-types:settings": "graphql-codegen -r dotenv/config --config codegen.settings.yml"
  },
  "dependencies": {
    "@babel/core": "^7.21.0",
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.1",
    "@commercetools-frontend/babel-preset-mc-app": "22.14.3",
    "@commercetools-frontend/eslint-config-mc-app": "22.14.3",
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@graphql-codegen/add": "5.0.0",
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/introspection": "4.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-graphql-files-modules": "3.0.0",
    "@graphql-codegen/typescript-operations": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@manypkg/cli": "0.21.1",
    "@preconstruct/cli": "2.8.2",
    "@types/jest": "^29.4.0",
    "@types/node": "20.10.6",
    "babel-jest": "29.7.0",
    "cross-env": "7.0.3",
    "dotenv": "16.3.1",
    "eslint": "8.56.0",
    "eslint-formatter-pretty": "5.0.0",
    "find-up": "^7.0.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-fail-on-console": "3.1.2",
    "jest-runner-eslint": "2.1.2",
    "jest-silent-reporter": "0.5.0",
    "jest-watch-typeahead": "2.2.2",
    "lint-staged": "15.2.0",
    "prettier": "2.8.8",
    "tsc-files": "^1.1.3",
    "typescript": "4.9.5"
  },
  "packageManager": "pnpm@8.14.0"
}
