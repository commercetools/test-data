{
  "name": "@commercetools-test-data/monorepo",
  "version": "1.0.0",
  "description": "Modules to generate test data for commercetools APIs",
  "private": true,
  "packageManager": "yarn@3.2.4",
  "workspaces": ["core", "models/*", "utils"],
  "preconstruct": {
    "packages": ["core", "models/*", "utils"]
  },
  "scripts": {
    "build": "preconstruct build",
    "watch": "preconstruct watch",
    "clean": "manypkg exec rm -rf build dist",
    "lint": "jest --config jest.eslint.config.js",
    "format": "yarn format:js && yarn format:md",
    "format:js": "prettier --write '**/*.{js,ts,tsx}'",
    "format:md": "prettier --write --parser markdown '**/*.md'",
    "test": "jest --config jest.test.config.js",
    "typecheck": "tsc --noEmit",
    "changeset:version-and-format": "changeset version && prettier --write --parser json '**/package.json' && YARN_ENABLE_IMMUTABLE_INSTALLS=false yarn install"
  },
  "dependencies": {
    "@changesets/changelog-github": "0.4.7",
    "@changesets/cli": "2.25.2",
    "@commercetools-frontend/babel-preset-mc-app": "21.18.1",
    "@commercetools-frontend/eslint-config-mc-app": "21.18.1",
    "@commitlint/cli": "17.2.0",
    "@commitlint/config-conventional": "17.2.0",
    "@manypkg/cli": "0.19.2",
    "@preconstruct/cli": "2.2.2",
    "@types/jest": "^29.0.0",
    "@types/node": "18.11.9",
    "babel-jest": "29.3.0",
    "cross-env": "7.0.3",
    "eslint": "8.27.0",
    "eslint-formatter-pretty": "4.1.0",
    "find-up": "^6.3.0",
    "husky": "8.0.2",
    "jest": "29.3.0",
    "jest-fail-on-console": "3.0.2",
    "jest-runner-eslint": "1.1.0",
    "jest-silent-reporter": "0.5.0",
    "jest-watch-typeahead": "1.1.0",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "tsc-files": "^1.1.3",
    "typescript": "4.8.4"
  }
}
