{
  "name": "@commercetools-test-data/monorepo",
  "version": "1.0.0",
  "description": "Modules to generate test data for commercetools APIs",
  "private": true,
  "preconstruct": {
    "packages": [
      "core",
      "models/*",
      "utils"
    ]
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "./scripts/postinstall.sh",
    "build": "preconstruct build",
    "watch": "preconstruct watch",
    "clean": "manypkg exec rm -rf build dist",
    "lint": "jest --config jest.eslint.config.js",
    "format": "pnpm format:js && pnpm format:md",
    "format:js": "prettier --write '**/*.{js,ts,tsx}'",
    "format:md": "prettier --write --parser markdown '**/*.md'",
    "test": "jest --config jest.test.config.js",
    "typecheck": "tsc --noEmit",
    "changeset:version-and-format": "changeset version && prettier --write --parser json '**/package.json' && pnpm install --lockfile-only"
  },
  "dependencies": {
    "@babel/core": "^7.21.0",
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.0",
    "@commercetools-frontend/babel-preset-mc-app": "21.23.1",
    "@commercetools-frontend/eslint-config-mc-app": "21.23.1",
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@manypkg/cli": "0.19.2",
    "@preconstruct/cli": "2.3.0",
    "@types/jest": "^29.4.0",
    "@types/node": "18.11.18",
    "babel-jest": "29.3.1",
    "cross-env": "7.0.3",
    "eslint": "8.32.0",
    "eslint-formatter-pretty": "4.1.0",
    "find-up": "^6.3.0",
    "husky": "8.0.3",
    "jest": "29.3.1",
    "jest-fail-on-console": "3.0.2",
    "jest-runner-eslint": "1.1.0",
    "jest-silent-reporter": "0.5.0",
    "jest-watch-typeahead": "2.2.1",
    "lint-staged": "13.1.0",
    "prettier": "2.8.3",
    "rimraf": "3.0.2",
    "tsc-files": "^1.1.3",
    "typescript": "4.9.4"
  },
  "packageManager": "pnpm@7.29.0"
}
